@model IEnumerable<ZVRPub.MVCFrontEnd.Models.User>

@{
    ViewData["Title"] = "IndexAsync";
}

<h2>Users</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-action="Manager">Head to manager page</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Find by UserName: @Html.TextBox("SearchString")
        <input type="submit" class="btn btn-primary" navbar-linkvalue="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelPermission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LevelPermission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPic)
                </td>
                <td>
                 
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |*@
                    <button class="btn btn-dark">   @Html.ActionLink("Orders", "Create", new { Controller = "orders", action = "Create" }) </button>
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
                </td>
            </tr>
        }
    </tbody>
</table>
